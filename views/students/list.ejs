<!DOCTYPE html>
<html>
<head>
  <title>Student Records</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f5f7fa;
      font-family: 'Segoe UI', sans-serif;
    }
    .container {
      max-width: 900px;
      margin-top: 60px;
      background: white;
      padding: 30px;
      border-radius: 16px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }
    h1 {
      color: #34495e;
      font-weight: 600;
    }
    .btn-primary {
      background-color: #007bff;
      border: none;
      border-radius: 8px;
    }
    .btn-warning {
      border-radius: 8px;
    }
    .btn-danger {
      border-radius: 8px;
    }
    table {
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="mb-4 text-center">Student Records</h1>
    <div class="text-end mb-3">
      <a href="/students/add" class="btn btn-primary">+ Add Student</a>
    </div>

    <table class="table table-hover align-middle">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th>Age</th>
          <th>Department</th>
          <th>Email</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (students.length === 0) { %>
          <tr>
            <td colspan="5" class="text-center text-muted">No students found</td>
          </tr>
        <% } else { %>
          <% students.forEach(student => { %>
            <tr>
              <td><%= student.name %></td>
              <td><%= student.age %></td>
              <td><%= student.department %></td>
              <td><%= student.email %></td>
              <td class="text-center">
                <a href="/students/edit/<%= student._id %>" class="btn btn-warning btn-sm">Edit</a>
                <a href="/students/delete/<%= student._id %>" class="btn btn-danger btn-sm">Delete</a>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
